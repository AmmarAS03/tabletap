generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())
  isActive  Boolean  @default(true)
  tenant    Tenant?
}

model Tenant {
  userId  Int     @id
  address String
  menus   Menu[]
  tables  Table[]
  user    User    @relation(fields: [userId], references: [id])
}

model Menu {
  id       Int        @id @default(autoincrement())
  title    String
  tenantId Int
  tenant   Tenant     @relation(fields: [tenantId], references: [userId])
  items    MenuItem[]
}

model MenuItem {
  id     Int    @id @default(autoincrement())
  name   String
  price  Float
  menuId Int
  menu   Menu   @relation(fields: [menuId], references: [id])
}

model Table {
  id        Int      @id @default(autoincrement())
  number    Int
  tenantId  Int
  tenant    Tenant   @relation(fields: [tenantId], references: [userId])
  createdAt DateTime @default(now())
}

enum Role {
  admin
  tenant
  customer
}
